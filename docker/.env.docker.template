# ContextForge Docker Environment Configuration Template
# Copy this file to .env.docker and update with your values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
PORT=3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET="your-secure-nextauth-secret-here"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Choose ONE of the following database configurations:

# Option 1: PostgreSQL (recommended for production)
DATABASE_URL=postgresql://contextforge:your-secure-password@postgres:5432/contextforge

# Option 2: SQLite (simpler, comment above and uncomment below)
# DATABASE_URL=file:/app/data/prod.db

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379

# =============================================================================
# AI API KEYS (REQUIRED - Replace with your actual keys)
# =============================================================================
OPENAI_API_KEY="your-openai-api-key-here"
ANTHROPIC_API_KEY="your-anthropic-api-key-here"
GOOGLE_AI_API_KEY="your-google-ai-api-key-here"
GITHUB_TOKEN="your-github-token-here"

# =============================================================================
# SECURITY
# =============================================================================
JWT_SECRET=your-secure-jwt-secret-here
ENCRYPTION_KEY=your-32-character-encryption-key

# =============================================================================
# FEATURE CONFIGURATION
# =============================================================================
ENABLE_AUTO_CLASSIFICATION=true
ENABLE_AUTO_OPTIMIZATION=true
ENABLE_DUPLICATE_DETECTION=true
ENABLE_QUALITY_ASSESSMENT=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
MAX_CONCURRENT_JOBS=10
BATCH_SIZE=10
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=/app/uploads

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600000  # 1 hour in ms

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FILE=/app/logs/contextforge.log
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# =============================================================================
# DATABASE CREDENTIALS (for Docker services)
# =============================================================================
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_USER=contextforge
POSTGRES_DB=contextforge

# =============================================================================
# OPTIONAL SERVICES
# =============================================================================
# Vector Database (Qdrant)
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=

# Email Configuration
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@contextforge.com

# Grafana Dashboard
GRAFANA_PASSWORD=your-secure-grafana-password